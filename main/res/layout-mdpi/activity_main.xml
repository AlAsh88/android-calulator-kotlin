<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/darker_gray"
android:orientation="vertical">

<EditText
    android:id="@+id/editDisplayNum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:autofillHints=""
    android:background="@color/gray"
    android:ems="10"
    android:gravity="right"
    android:inputType="number"
    android:paddingTop="10pt"
    android:textColor="@color/white"
    android:textSize="40sp"
    tools:text="0" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buClear"
            android:text="@string/ac"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buttonPlusMinus"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/PlusMinus"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonMod"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buPercent"
            android:text="@string/_Mod"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buttonDivide"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="buOpEvent"
            android:text="@string/_Divide"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button7"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_7"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button8"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_8"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button9"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_9"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buttonMultiply"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="buOpEvent"
            android:text="@string/_Multiply"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button4"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_4"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button5"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_5"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button6"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_6"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buttonMinus"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="buOpEvent"
            android:text="@string/_Minus"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_1"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button2"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_2"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button3"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/offwhiteback"
            android:onClick="buNumberEvent"
            android:text="@string/_3"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buttonPlus"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="buOpEvent"
            android:text="@string/_Plus"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </TableRow>

</TableLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:layout_marginRight="1pt"
        android:id="@+id/button0"
        android:layout_width="60pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/offwhiteback"
        android:onClick="buNumberEvent"
        android:text="@string/_0"
        android:textSize="18sp" />

    <Button
        android:layout_marginRight="1pt"
        android:id="@+id/buttonDot"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/offwhiteback"
        android:onClick="buNumberEvent"
        android:text="@string/_Dot"
        android:textSize="18sp" />

    <Button
        android:layout_marginRight="1pt"
        android:id="@+id/buttonEqual"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/buop"
        android:onClick="buEqualEvent"
        android:text="@string/_Equal"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
</LinearLayout>